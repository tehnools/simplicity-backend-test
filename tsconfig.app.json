{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "composite": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "prettier.config.js",
    "test",
    "**/*.(spec|test).(ts|js|tsx|jsx|mjs|cjs|mts|cts)"
  ]
}
